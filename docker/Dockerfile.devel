ARG GOLANG_VERSION=x.x.x
ARG GOLANGCI_LINT_VERSION=v1.52.0
ARG MOQ_VERSION=v0.4.0
ARG CONTROLLER_GEN_VERSION=v0.14.0
ARG CLIENT_GEN_VERSION=v0.29.2
ARG MOCKGEN_VERSION=v0.6.0
FROM golang:${GOLANG_VERSION}

# RUN go install github.com/gordonklaus/ineffassign@latest && \
#     go install github.com/client9/misspell/cmd/misspell@latest

ENV GOTOOLCHAIN=local
RUN go install github.com/golangci/golangci-lint/cmd/golangci-lint@${GOLANGCI_LINT_VERSION}
RUN go install github.com/matryer/moq@${MOQ_VERSION}
RUN go install sigs.k8s.io/controller-tools/cmd/controller-gen@${CONTROLLER_GEN_VERSION}
RUN go install k8s.io/code-generator/cmd/client-gen@${CLIENT_GEN_VERSION}
RUN go install go.uber.org/mock/mockgen@${MOCKGEN_VERSION}
