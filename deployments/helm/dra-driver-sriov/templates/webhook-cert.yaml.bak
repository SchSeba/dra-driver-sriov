{{- if .Values.webhook.enabled }}
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ include "dra-driver-sriov.fullname" . }}-webhook-cert
  namespace: {{ include "dra-driver-sriov.namespace" . }}
  labels:
    {{- include "dra-driver-sriov.labels" . | nindent 4 }}
    app.kubernetes.io/component: webhook
spec:
  dnsNames:
    {{- $svcName := printf "%s-webhook" (include "dra-driver-sriov.fullname" .) }}
    {{- $svcNamespace := (include "dra-driver-sriov.namespace" .) }}
    - {{ $svcName }}.{{ $svcNamespace }}.svc
  issuerRef:
    kind: Issuer
    name: {{ include "dra-driver-sriov.fullname" . }}-webhook-issuer
  secretName: {{ include "dra-driver-sriov.fullname" . }}-webhook-cert
{{- end }}
